<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.meeladsd.memoriesapplication.EditProfileActivity"
    android:background="@drawable/bg_new2">

    <RelativeLayout
        android:background="@drawable/rectangle"

        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/textView_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="61dp"
        android:id="@+id/relativeLayout">

    <TextView
        android:text="First Name"
        android:textStyle="bold"

        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"

        android:layout_alignBottom="@+id/userFirstName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="12dp" />

    <!-- counter -->
    <TextView
        android:id="@+id/userFirstName"
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold"
        android:text="thename"
        android:clickable="true"
        android:editable="true"
        android:focusableInTouchMode="true"/>
    </RelativeLayout>


    <RelativeLayout
        android:background="@drawable/rectangle"

        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/textView_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="120dp"
        >

        <TextView
            android:text="Last Name"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_alignBottom="@+id/userLasttName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="31dp"
            android:layout_marginStart="12dp" />

        <!-- counter -->
        <TextView
            android:id="@+id/userLasttName"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text="thename"
            android:clickable="true"
            android:editable="true"
            android:focusableInTouchMode="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/rectangle"

        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/textView_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="180dp"
        >

        <TextView
            android:text="Email"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_marginTop="8dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="31dp"
            android:layout_marginStart="13dp" />

        <!-- counter -->
        <TextView
            android:id="@+id/userEmail"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text="thename"
            android:clickable="true"
            android:editable="true"
            android:focusableInTouchMode="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="@drawable/rectangle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/textView_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="240dp"
        android:id="@+id/relativeLayout2">

        <TextView
            android:text="User name"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_alignBottom="@+id/username"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="31dp"
            android:layout_marginStart="12dp" />

        <!-- counter -->
        <TextView
            android:id="@+id/username"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text="thename"
            android:clickable="true"
            android:editable="true"
            android:focusableInTouchMode="true"/>
    </RelativeLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save changes"
        android:width="150dp"
        android:id="@+id/editBtn"
        android:layout_below="@+id/relativeLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:background="#23DE54"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete user"
        android:id="@+id/deleteUserBtn"
        android:width="150dp"
        android:background="#FF0000"
        android:layout_below="@+id/editBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

</RelativeLayout>
