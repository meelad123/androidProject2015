<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.meeladsd.memoriesapplication.CreateVacationaActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="create vacation"
        android:id="@+id/create_vacation_btn"
        android:layout_below="@+id/Vac_End"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_txt"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Title" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/description_txt"
        android:hint="Description"
        android:layout_below="@+id/title_txt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/title_txt"
        android:layout_alignEnd="@+id/title_txt" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/place_txt"
        android:hint="place"
        android:layout_below="@+id/description_txt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/description_txt"
        android:layout_alignEnd="@+id/description_txt" />

    <TextView
        android:hint="Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Vac_start"
        android:layout_below="@+id/place_txt"
        android:layout_alignLeft="@+id/create_vacation_btn"
        android:layout_alignStart="@+id/create_vacation_btn"
        android:layout_marginTop="52dp"
        android:layout_alignRight="@+id/create_vacation_btn"
        android:layout_alignEnd="@+id/create_vacation_btn"
        android:gravity="center"
        android:clickable="true" />

    <TextView
        android:hint="End"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Vac_End"
        android:layout_below="@+id/Vac_start"
        android:layout_alignLeft="@+id/Vac_start"
        android:layout_alignStart="@+id/Vac_start"
        android:layout_marginTop="50dp"
        android:layout_alignRight="@+id/Vac_start"
        android:layout_alignEnd="@+id/Vac_start"
        android:clickable="true" />




</RelativeLayout>
