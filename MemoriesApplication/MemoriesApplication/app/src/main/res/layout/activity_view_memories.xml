<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.meeladsd.memoriesapplication.ViewMemoriesActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/top_wrapper"
        android:padding="10dp"
        android:gravity="center">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/img_video"
            android:src="@drawable/ic_movie_creation_black_24dp"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/img_audio"
            android:layout_toRightOf="@+id/img_video"
            android:src="@drawable/ic_keyboard_voice_black_24dp"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/img_camera"
            android:layout_toRightOf="@+id/img_audio"
            android:src="@drawable/ic_camera_alt_black_24dp"
            android:layout_marginLeft="20dp"
            />
    </RelativeLayout>
    <GridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/grd_imagess"
        android:columnWidth="60dp"
        android:numColumns="auto_fit"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:gravity="center"
        android:layout_below="@+id/top_wrapper"
        >
    </GridView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Audio: 0"
        android:id="@+id/txt_audio"
        android:layout_below="@+id/grd_imagess"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Video: 0"
        android:id="@+id/txt_video"
        android:layout_below="@id/txt_audio"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:text=""
        android:paddingLeft="4dp"
        android:textColor="#fff"
        android:background="#e4e4e4"
        android:id="@+id/img_devider"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/txt_video"
        android:textStyle="bold"
        >
    </TextView>
    <ListView
        android:id="@+id/memories_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEEEEE"
        android:paddingBottom="5dp"
        android:layout_below="@+id/img_devider"/>

    <TextView android:id="@android:id/empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0000FF"
        android:text="No memories found."
        android:layout_below="@+id/memories_list"/>
</RelativeLayout>
